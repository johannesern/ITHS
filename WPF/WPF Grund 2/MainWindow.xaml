<Window x:Class="WPF_Grund_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Grund_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBoxSave" HorizontalAlignment="Left" Height="242" Margin="93,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" TextChanged="textBox_TextChanged" SelectionTextBrush="#FF757575"/>
        <TextBox x:Name="textBoxDisplay" HorizontalAlignment="Left" Height="242" Margin="542,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170"/>
        <Button x:Name="SaveButton" Content="Save to File" HorizontalAlignment="Left" Height="54" Margin="93,330,0,0" VerticalAlignment="Top" Width="170" Click="SaveButton_Click" IsEnabled="False"/>
        <Button x:Name="LoadButton" Content="Read from File" HorizontalAlignment="Left" Height="59" Margin="542,330,0,0" VerticalAlignment="Top" Width="170" Click="LoadButton_Click"/>
        <Button x:Name="EraseFile" Content="Erase File" HorizontalAlignment="Center" Height="37" VerticalAlignment="Center" Width="56" Click="EraseFile_Click"/>

    </Grid>
</Window>
